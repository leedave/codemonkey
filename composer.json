{
    "name": "leedch/codemonkey",
    "type": "library",
    "description": "Module for generating code from simple templates / configs",
    "keywords": [
        "leedch",
        "codemonkey",
        "generate",
        "template"
    ],
    "homepage": "https://github.com/leedave/codemonkey.git",
    "license": "MIT",
    "authors": [
        {
            "name": "David Lee",
            "email": "leed@leed.ch",
            "homepage": "https://www.leed.ch/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.0|~7.1",
        "leedch/html" : "^2.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Leedch\\Codemonkey\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leedch\\Codemonkey\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}